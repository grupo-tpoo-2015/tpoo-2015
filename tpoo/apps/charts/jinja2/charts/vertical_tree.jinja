{% extends "base.jinja" %}

{% block css %}
<style>

    .node {
        cursor: pointer;
    }

    .node circle {
        stroke-width: 3px;
    }

    .node text {
        font: 12px sans-serif;
        fill: #777;
    }

    .link {
        fill: none;
        stroke: #ccc;
        stroke-width: 2px;
    }

    .tree {
        margin-bottom: 10px;
        overflow: auto;
    }

</style>
{% endblock %}

{% block content %}
<div id="tree"></div>
{% endblock %}

{% block js %}
<script type="text/javascript" src="{{ static('charts/js/vertical-tree.js') }}"></script>
{% endblock %}

{% block js_init %}
<script>

    tree.draw({
        svgSelector: "#tree",
        data: {{ jsonify(tree_data['data']) }},
    });

</script>
{% endblock %}