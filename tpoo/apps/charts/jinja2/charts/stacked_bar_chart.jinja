{% extends "base.jinja" %}

{% block css %}
<style>
    svg text {
        font-family: sans-serif;
    }
    svg .bar text {
        text-anchor: middle;
        fill: white;
        font-size: 13px;
    }
    svg .bar:hover {
        opacity: 0.9;
    }
    svg {
        width: 600px;
        height: 400px;
    }
</style>
{% endblock %}

{% block content %}
<svg></svg>
{% endblock %}

{% block js %}
<script type="text/javascript" src="{{ static('charts/js/stacked-bar-chart.js') }}"></script>
{% endblock %}

{% block js_init %}
<script>
    stackedBarChart.init({
        dataset: {{ jsonify(dataset) }},
    });
</script>
{% endblock %}
