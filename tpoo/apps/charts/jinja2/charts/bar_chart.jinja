{% extends "base.jinja" %}

{% block css %}
<style>
svg text {
    font-family: sans-serif;
}
svg g text {
    text-anchor: middle;
    fill: white;
    font-size: 13px;
}
svg rect:hover {
    opacity: 0.9;
}
svg {
    width: 600px;
    height: 400px;
}
</style>
{% endblock %}

{% block content %}
<svg></svg>
{% endblock %}

{% block js %}
<script type="text/javascript" src="{{ static('charts/js/bar-chart.js') }}"></script>
{% endblock %}

{% block js_init %}
<script>
    barChart.init({
        dataset: {{ jsonify(dataset) }},
    });
</script>
{% endblock %}
