{% extends "base.jinja" %}

{% block nav %}{% endblock %}

{% block body %}

<div class="col-sm-offset-4 col-sm-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Registrarse</h3>
        </div>
        <div class="panel-body">
            <form method="post" action="{{ url('register') }}" role="form">
                {{ form.errors }}
                <input type="hidden" name="csrfmiddlewaretoken" value="{{ csrf_token }}">

                <div class="form-group">
                    <label for="id_username">Nombre de usuario:</label>
                    <input id="id_username" class="form-control" maxlength="254" name="username" type="text">
                </div>

                <div class="form-group">
                    <label for="id_password1">Contraseña:</label>
                    <input id="id_password1"  class="form-control" name="password1" type="password">
                </div>

                <div class="form-group">
                    <label for="id_password2">Repita la contraseña:</label>
                    <input id="id_password2"  class="form-control" name="password2" type="password">
                </div>

                <input type="submit" value="Aceptar" class="btn btn-default"/>
            </form>
        </div>
    </div>
</div>

{% endblock %}